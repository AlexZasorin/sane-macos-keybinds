{
    "title": "Caps Lock to Escape",
    "rules": [
        {
            "description": "Change Caps Lock to Escape",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "caps_lock",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [{
                        "key_code": "escape"
                    }]
                }
            ]
        }
    ]
}

